{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SikuliX IDE",
  "version": "0.8.0",
  "identifier": "com.sikulix.ide",
  "build": {
    "frontendDist": "dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "SikuliX IDE",
        "width": 1024,
        "height": 768,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "nsis"
    ],
    "icon": [
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "Copyright (c) 2024 SikuliX Team",
    "shortDescription": "Visual automation tool using image recognition",
    "longDescription": "SikuliX IDE is a visual automation tool that uses image recognition to automate GUI interactions. It supports Python (Jython), JavaScript, and Ruby scripting.",
    "licenseFile": "LICENSE"
  }
}