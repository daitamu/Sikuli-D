{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sikuli-D IDE",
  "version": "0.1.3",
  "identifier": "com.sikulix.ide",
  "build": {
    "devUrl": "http://localhost:5173",
    "frontendDist": "src-frontend/dist",
    "beforeDevCommand": "cd src-frontend && npm run dev",
    "beforeBuildCommand": "cd src-frontend && npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Sikuli-D IDE",
        "width": 1024,
        "height": 768,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "nsis"
    ],
    "icon": [
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "Copyright (c) 2024 SikuliX Team",
    "shortDescription": "Visual automation tool using image recognition",
    "longDescription": "SikuliX IDE is a visual automation tool that uses image recognition to automate GUI interactions. It supports Python (Jython), JavaScript, and Ruby scripting.",
    "licenseFile": "LICENSE"
  }
}
